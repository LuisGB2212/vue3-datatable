{
    "compilerOptions": {
        "target": "ESNext",
        "useDefineForClassFields": true,
        "module": "ESNext",
        "moduleResolution": "Node",
        "strict": true,
        "jsx": "react",
        "sourceMap": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "lib": [
            "ESNext",
            "DOM"
        ],
        "skipLibCheck": true,
        "outDir": "dist",
        "declaration": true,
        "declarationDir": "dist",
        "rootDir": "src/components"
    },
    "include": [
        "src/components/**/*.ts",
        "src/components/**/*.vue"
    ],
    "exclude": [
        "src/main.ts",
        "src/App.vue"
    ],
    "references": [
        {
            "path": "./tsconfig.node.json"
        }
    ]
}